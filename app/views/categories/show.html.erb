<h1>Category: <%= @category.name %></h1>
<% if admin? %>
  <%= link_to "Add Video", new_video_path %>
<% end %>

<% if @videos.each.count == 0 %>
    <%= "<br /><h2> No Videos listed in this Category for Now, Check Back Soon ;) </h2>".html_safe %>
<% else %>
    <h2> Videos in This Category </h2>
    <% @videos.each do |video| %>
        <div class = "video_category_list" ><br />
            <h3><%= video.title %> </h3>
            <%= link_to image_tag("video_poster/#{video.category}.png", :alt => "#{video.title}", :width => 80), video_path(video), :title => "#{video.title}" %> <br />
            <%= pluralize("#{video.hits}", 'view') %> &
            <%= pluralize("#{review_count(video)}", "review") %>
        </div><br />
    <% end %>
<% end %>
